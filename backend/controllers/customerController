const asyncHandler = require('express-async-handler');
const Customer = require('../models/Customer');

const getAllCustomers = asyncHandler(async (req, res) => {
  res.send('Get all customers');
});

// const getCustomer = asyncHandler(async (req, res) => {
//   res.send('Get single customers');
// });

const createNewCustomer = asyncHandler(async (req, res) => {
  // constructor(customerID, firstName, minit, lastName, address, email) //
  const { firstName, minit, lastName, address, email } = req.body;

  // need logic to validate values recieved from body

  let customer = new Customer(firstName, minit, lastName, address, email);
  customer = await customer.save();
  console.log(customer);
  res.send('Create new customers');
});

module.exports = { getAllCustomers, createNewCustomer };
